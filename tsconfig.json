{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": false, // Tip güvenliği True olduğunda fazlalaşır.
    "esModuleInterop": true,
    "skipLibCheck": true, //
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
